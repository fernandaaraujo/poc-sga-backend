{
  "server": {
    "port": 3001
  },
  "db": {
    "name": "database",
    "saveOnPush": true,
    "humanReadable": false,
    "separator": "/"
  },
    "logging": {
      "console": {
        "level": "debug",
        "silent": false,
        "colorize": true,
        "timestamp": false,
        "json": false
      },

      "file": {
        "level": "info",
        "silent": false,
        "colorize": true,
        "timestamp": true,
        "filename": "log/log",
        "maxsize": "100000000",
        "datePattern": "-yyyy-MM-dd.log",
        "json": false
      },

      "exception": {
        "level": "error",
        "silent": false,
        "colorize": true,
        "timestamp": true,
        "filename": "log/exception",
        "maxsize": "100000000",
        "datePattern": "-yyyy-MM-dd.log",
        "json": true,
        "humanReadableUnhandledException": true
      }
    }
}
